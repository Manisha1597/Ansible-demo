pipeline {
    agent any
    stages{
        stage('Repo Clone'){
            steps{
                git credentialsId: '757e3131-ac60-42de-8419-f44a49936b91', url: 'https://github.com/Manisha1597/Ansible-demo.git'
            }
        }
        stage('Trigger playbook') {
            steps {
                 sh "ansible-playbook /home/ec2-user/Playbooks/playbook.yml"
    }
        }    
        stage('Post action') {
            steps {
                echo 'Completed'
            }
        }
    }
}
